<div class="page">
  <div class="gallery"> 
    <h1>Paintings by Maxine</h1>
    {{#if user}}
    <div class="add-button">
        <a href="/gallery/add" class="item-link"><button class="gallery-button"> Add Images</button></a>
    </div>
        {{#each images}}
<div class="imagecontainer">
    
<div class="imagecon lightbox_trigger">
            <ul class="caption">
                <li>{{title}}</li>
                <li>{{style}}</li>
                <li>{{date}}</li>
            </ul>
            <img src="{{image}}" alt="Pic" class="image">
 </div>  
    <div class="image-button-con">
        <a href="/gallery/edit/{{id}}" class="item-link"><button class="image-button">Edit</button></a>
    </div>
      <div class="image-button-con"> 
        <form action="/gallery/{{id}}?_method=DELETE" method='POST'>
            <input type="hidden" name='_method' value="PUT">
            <input class="image-button" type="submit" value="Delete">
        </form>
    </div>
    </div>
{{else}}

<p>Problem Loading Gallery...</p>
{{/each}}
   
